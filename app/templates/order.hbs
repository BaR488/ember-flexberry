<h3>Order - edit form</h3>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary" {{action 'save'}}>Save</button>
      <button type="submit" class="btn btn-primary" {{action 'close'}}>Close</button>
    </div>
  </div>
  <div class="form-group">
    {{#if errorMessages}}
      {{#each errorMessages as |currentError|}}
        <div class="alert alert-warning alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{currentError}}
        </div>
      {{/each}}
    {{/if}}
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">ShipName</label>
    <span style="color:red">{{model.errors.shipName}}</span>
    <div class="col-sm-10">
      {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.shipName}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">ShipCountry</label>
    <span style="color:red">{{model.errors.shipCountry}}</span>
    <div class="col-sm-10">
      {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.shipCountry}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">OrderDate</label>
    <span style="color:red">{{model.errors.orderDate}}</span>
    <div class="col-sm-10">
      {{bootstrap-datepicker class="form-control" placeholder="(no value)" value=model.orderDate
        format="dd.mm.yyyy" todayBtn="linked" clearBtn=true orientation="top auto" autoclose=true todayHighlight=true}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Employee FirstName</label>
    <span style="color:red">{{model.errors.employee.firstName}}</span>
    <div class="col-sm-10">
      {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.employee.firstName readonly=true}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Employee LastName</label>
    <span style="color:red">{{model.errors.employee.lastName}}</span>
    <div class="col-sm-10">
      {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.employee.lastName readonly=true}}
    </div>
  </div>
</form>
