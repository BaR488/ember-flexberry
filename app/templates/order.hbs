<h3>Order - edit form</h3>

<form class="form-horizontal ui form" role="form">
  <div class="form-group field">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="ui primary button" {{action 'save'}}>Save</button>
      <button type="submit" class="ui primary button" {{action 'close'}}>Close</button>
    </div>
  </div>
  <div class="form-group">
    {{#if errorMessages}}
      {{#each currentError in errorMessages}}
        <div class="ui negative message">
		  <i class="close icon"></i>
		  <div class="header">
			Error occured
		  </div>
		  <p>{{currentError}}</p>
		</div>
      {{/each}}
    {{/if}}
  </div>
  <div class="form-group inline field">
    <label class="ui label">ShipName</label>
    <span style="color:red">{{model.errors.shipName}}</span>
    {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.shipName}}
  </div>
  <div class="form-group inline field">
    <label class="ui label">ShipCountry</label>
    <span style="color:red">{{model.errors.shipCountry}}</span>
    {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.shipCountry}}
  </div>
  <div class="form-group inline field">
    <label class="ui label">OrderDate</label>
    <span style="color:red">{{model.errors.orderDate}}</span>
    {{bootstrap-datepicker class="form-control" placeholder="(no value)" value=model.orderDate
        format="dd.mm.yyyy" todayBtn="linked" clearBtn=true orientation="top auto" autoclose=true todayHighlight=true}}
  </div>
  <div class="form-group inline field">
    <label class="ui label">Employee FirstName</label>
    <span style="color:red">{{model.errors.employeeID.firstName}}</span>
    {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.employeeID.firstName readonly=true}}
  </div>
  <div class="form-group inline field">
    <label class="ui label">Employee LastName</label>
    <span style="color:red">{{model.errors.employeeID.lastName}}</span>
    {{input type="text" class="form-control" placeholder="(no value)" required=true value=model.employeeID.lastName readonly=true}}
  </div>
</form>
