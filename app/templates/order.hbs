<h3>Order - edit form</h3>

<form class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary" {{action 'save'}}>Save</button>
            <button type="submit" class="btn btn-primary" {{action 'close'}}>Close</button>
        </div>
    </div>
    <div class="form-group">
        {{#if errorMessages}}
            {{#each currentError in errorMessages}}
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{currentError}}
                    </div>
            {{/each}}
        {{/if}}
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">OrderDate</label>
        <span style="color:red">{{errors.orderDate}}</span>
        <div class="col-sm-10">
            {{bootstrap-datepicker class="form-control" placeholder="(no value)" value=model.orderDate
              format="dd.mm.yyyy" todayBtn="linked" clearBtn=true orientation="top auto" autoclose=true todayHighlight=true}}
        </div>
    </div>
</form>
