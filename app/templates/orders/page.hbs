<div class="ui top attached menu">
  {{#link-to 'order.new' class="item"}}
      <div class="ui middle aligned content">
          <p class="ui small header">+ New order</p>
      </div>
  {{/link-to}}
</div>
{{ember-table
  class = "ui bottom attached"
  hasFooter = false
  enableContentSelection = false
  columns = tableColumns
  content = tableContent
}}
<div id="bottom-menu" class="ui secondary menu">
    <div class="ui basic buttons">
        <button class="ui {{unless hasPreviousPage 'disabled'}} button" {{action "previousPage"}}>&laquo;</button>
      {{#each page in pages}}
        {{#if page.isEllipsis}}
            <button class="ui button">...</button>
        {{else}}
          {{#if page.isCurrent}}
              <button class="ui active button">{{page.number}}</button>
          {{else}}
              <button class="ui button" {{action 'gotoPage' page.number}}>{{page.number}}</button>
          {{/if}}
        {{/if}}
      {{/each}}
        <button class="ui {{unless hasNextPage 'disabled'}} button" {{action "nextPage"}}>&raquo;</button>
    </div>
    <div class="right menu">
      {{view "select"
        content = perPageValues
        value = per_page
        class = "ui dropdown"
      }}
    </div>
</div>