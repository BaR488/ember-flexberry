<thead>
  <tr>
    {{#each columns as |column|}}
      {{component headerCellComponent column=column}}
    {{/each}}
  </tr>
</thead>
<tbody>
  {{#each content as |record|}}
    <tr class="{{ if (eq selectedRecord record ) 'active' }}" {{action 'rowClick' record preventDefault=false}}>
      {{#each columns as |column|}}
        {{component column.cellComponent column=column record=record readonly=readonly}}
      {{/each}}
    </tr>
  {{/each}}
</tbody>