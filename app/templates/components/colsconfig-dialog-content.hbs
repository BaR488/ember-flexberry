<div class=" content">
  <!--div class="description">
    <div class="list-group"-->
      <table class="ui selectable celled table"
        ><thead
          ><tr
            ><th style="width:36px;align:center"><i class='large hide icon' title='Не отображать столбцы'></i></th
            ><th>Направление сортировки</th
            ><th>Приоритет при сортировке</th
            ><th>Название столбца</th
            ><th style="width:72px;text-align:center"><i class='large sort icon' title='Установить порядок по умолчанию'></i></th
          ></tr
        ></thead
        ><tbody>
{{#each model as |colDesc n|}}
{{!--log 'name='colDesc.name ' ordernot='colDesc.ordernot ' orderasc='colDesc.orderasc ' orderdesc='colDesc.orderdesc--}}
          <tr id='ColDescTR_{{n}}'
          ><td><i id='ColDescHide_{{n}}' class='large {{if colDesc.hide 'hide' 'unhide'}} icon' colsConfigHidden=false {{action 'invertVisibility' n}}></i></td
            ><td
              ><select id='ColDescOrder_{{n}}' name="order[{{colDesc.name}}]" onChange="">
                <option selected='{{colDesc.ordernot}}'>-</option>
                <option selected='{{colDesc.orderasc}}' value='asc'>↑</option>
                <option selected='{{colDesc.orderdesc}}' value='desc'>↓</option>
              </select
            ></td
            ><td><input id='ColDescPriority_{{n}}' class='priority' type='input' name='priority[{{colDesc.name}}]' onChange="" disabled style='display:none' /></td
            ><td>{{colDesc.name}}</td
            ><td><nobr><button onClick="">↑</button><button onClick="">↓</button></nobr></td
          ></tr>
{{/each}}
        </tbody
        ><tfoot class="full-width"
          ><tr
          ><td colspan='6'
          ><div class="ui right floated button" onClick="">OK</div
            ><div class="ui"
              >Название настройки <input type='input' name='configName' placeholder='Введите название настройки'
              /><div class="ui small button" onClick="">Сохранить</div
            ></div
          ></td
          ></tr
      ></tfoot
      ></table>
    <!--/div>
  </div-->
</div>

