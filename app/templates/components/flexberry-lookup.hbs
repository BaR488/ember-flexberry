{{#if (and (not readonly) autocomplete)}}
  {{#ui-search}}
    {{input 
      type="text"
      class="prompt form-control form-control-trunc lookup-field"
      placeholder=placeholder
      value=autocompleteValue
    }}
    <div class="results"></div>
  {{/ui-search}}
{{else}}
  {{input
    type="text"
    class="form-control form-control-trunc lookup-field"
    placeholder=placeholder
    readonly='readonly'
    value=value
  }}
{{/if}}

<button class="ui {{if readonly 'disabled'}} {{classChoose}} button" {{action 'choose' chooseData}}>{{{chooseText}}}</button>
<button class="ui {{if readonly 'disabled'}} {{classRemove}} button" {{action 'remove' removeData}}>{{{removeText}}}</button>
