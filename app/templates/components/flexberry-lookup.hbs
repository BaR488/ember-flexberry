{{#if dropdown}}
  {{flexberry-dropdown
    placeholder=placeholder
    items=items
    class='search'
  }}
  {{!-- {{#ui-dropdown class="selection search"}}
    <div class="default text">Select an item</div>
    <i class="dropdown icon"></i>
    <div class="menu">
    {{#each itemActions as |action|}}
      <div class="item" data-id="{{action}}">
        {{action}}
      </div>
    {{/each}}
    </div>
  {{/ui-dropdown}} --}}
{{else}}
<div class="ui fluid action input">
  {{input 
    type='text'
    class=(concat 'lookup-field ' (if autocomplete 'prompt'))
    placeholder=placeholder
    value=(if autocomplete autocompleteValue value)
    readonly=(if readonly 'readonly')
  }}
  <button class="ui {{if readonly 'disabled'}} {{classChoose}} button" {{action 'choose' chooseData}}>{{{chooseText}}}</button>
  <button class="ui {{if readonly 'disabled'}} {{classRemove}} button" {{action 'remove' removeData}}>{{{removeText}}}</button>
</div>
{{/if}}
{{#if (and (not readonly) autocomplete)}}
  <div class="results"></div>
{{/if}}
