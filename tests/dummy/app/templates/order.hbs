<h3>{{title}} - edit form</h3>

{{#if errorMessages}}
  {{#each errorMessages as |currentError|}}
	{{ui-message
	  type = 'error'
	  closeable = true
	  visible = true
	  title = "Error occurred"
	  message = currentError
	}}
  {{/each}}
{{/if}}
<form class="ui form" role="form">
  <div class="field">
    <div>
      {{#unless readonly}}
        <button type="submit" class="ui primary button" {{action 'save'}}>Save</button>
        {{#unless model.isNew}}
        <button type="submit" class="ui primary button" {{action 'delete'}}>Delete</button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui primary button" {{action 'close'}}>Close</button>
    </div>
  </div>
  <div class="ui grid {{if model.errors.shipName 'error' ''}}">
	<div class="ui two wide column right aligned middle aligned content">
		<label>ShipName</label>
	</div>
	<div class="ten wide column">
		<span style="color:red">{{model.errors.shipName}}</span>
		{{flexberry-textbox placeholder="(no value)" readonly=readonly required=true value=model.shipName}}
	</div>
  </div>
  <div class="ui grid {{if model.errors.shipCountry 'error' ''}}">
	<div class="ui two wide column right aligned middle aligned content">
		<label>ShipCountry</label>
	</div>
	<div class="ten wide column">
		<span style="color:red">{{model.errors.shipCountry}}</span>
		{{flexberry-textbox placeholder="(no value)" readonly=readonly required=true value=model.shipCountry}}
	</div>
  </div>
  <div class="ui grid {{if model.errors.orderDate 'error' ''}}">
	<div class="ui two wide column right aligned middle aligned content">
		<label>OrderDate</label>
	</div>
	<div class="ten wide column">
		<span style="color:red">{{model.errors.orderDate}}</span>
		{{flexberry-datepicker placeholder="(no value)" readonly=readonly hasTimePicker=true value=model.orderDate class="fluid"}}
	</div>
  </div>
  <div class="ui grid {{if model.errors.employee.firstName 'error' ''}}">
	<div class="ui two wide column right aligned middle aligned content">
		<label>Employee FirstName</label>
	</div>
	<div class="ten wide column">
		<span style="color:red">{{model.errors.employee.firstName}}</span>
		{{flexberry-textbox placeholder="(no value)" readonly=readonly required=true value=model.employee.firstName}}
	</div>
  </div>
  <div class="ui grid {{if model.errors.employee.lastName 'error' ''}}">
	<div class="ui two wide column right aligned middle aligned content">
		<label>Employee LastName</label>
	</div>
	<div class="ten wide column">
		<span style="color:red">{{model.errors.employee.lastName}}</span>
		{{flexberry-textbox placeholder="(no value)" required=true readonly=readonly value=model.employee.lastName}}
	</div>
  </div>
  <div class="ui grid {{if model.errors.customer 'error' ''}}">
  <div class="ui two wide column right aligned middle aligned content">
    <label>Customer</label>
  </div>
  <div class="ten wide column">
    <span style="color:red">{{model.errors.customer}}</span>
    {{flexberry-lookup
        choose='showLookupDialog'
        remove='removeLookupValue'
        value=model.customer.contactName
        relationName='customer'
        projection='CustomerL'
        title='Customer'
        readonly=readonly
        limitFunction=lookupLimitFunction
      }}
  </div>
  </div>
</form>
