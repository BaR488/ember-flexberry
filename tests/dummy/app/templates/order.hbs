<h3>{{title}} - edit form</h3>

{{#if errorMessages}}
    {{#each errorMessages as |currentError|}}
      {{ui-message
        type='error'
        closeable=true
        visible=true
        title='Error occurred'
        message=currentError
      }}
    {{/each}}
{{/if}}
<form class="ui form flexberry-horizontal-form" role="form">
<div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui positive button" {{action 'save'}}>Save</button>
        {{#unless model.isNew}}
          <button type="submit" class="ui negative button" {{action 'delete'}}>Delete</button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button" {{action 'close'}}>Close</button>
    </div>
</div>
<div class="inline fields">
    {{#if model.errors.shipName}}
        <span style="color:red">{{model.errors.shipName}}</span>
    {{/if}}
    {{flexberry-field
        placeholder='(no value)'
        readonly=readonly
        required=true
        value=model.shipName
        label='ShipName'
        class=(concat 'sixteen wide' (if model.errors.shipName 'error' ''))
    }}
</div>
<div class="inline fields">
    {{#if model.errors.shipCountry}}
        <span style="color:red">{{model.errors.shipCountry}}</span>
    {{/if}}
    {{flexberry-field
        placeholder='(no value)'
        readonly=readonly
        required=true
        value=model.shipCountry
        label='ShipCountry'
        class=(concat 'sixteen wide' (if model.errors.shipCountry 'error' ''))
    }}
</div>
<div class="inline fields">
    <div class="field no-padding">
        <label>OrderDate</label>
    </div>
    <div class="sixteen wide field">
        {{#if model.errors.orderDate}}
            <span style="color:red">{{model.errors.orderDate}}</span>
        {{/if}}
        {{flexberry-datepicker
            placeholder='(no value)'
            readonly=readonly
            hasTimePicker=true
            value=model.orderDate
            class=(if model.errors.shipCountry 'error' '')
        }}
</div>
</div>
<div class="inline fields">
    {{#if model.errors.firstName}}
        <span style="color:red">{{model.errors.firstName}}</span>
    {{/if}}
    {{flexberry-field
        placeholder='(no value)'
        readonly=readonly
        required=true
        value=model.employee.firstName
        label='Employee FirstName'
        class=(concat 'sixteen wide' (if model.errors.firstName 'error' ''))
    }}
</div>
<div class="inline fields">
    {{#if model.errors.lastName}}
        <span style="color:red">{{model.errors.lastName}}</span>
    {{/if}}
    {{flexberry-field
        placeholder='(no value)'
        readonly=readonly
        required=true
        value=model.employee.lastName
        label='Employee LastName'
        class=(concat 'sixteen wide' (if model.errors.lastName 'error' ''))
    }}
</div>
</form>
