<h3>{{t "forms.application-log.caption"}}</h3>
<div class="right item">
<span>{{t "forms.application-log.placeholder"}}</span>
      {{flexberry-dropdown
        class="ui dropdown"
        items=settings
        onChange=(action 'setLogLevel')
        showPlaceholder=false
        text=text
        readonly=readonly
      }}
  </div>
<p></p>
<div class="row">
  {{flexberry-objectlistview
    modelName="logging-example/application-log"
    modelProjection=modelProjection
    content=model
    createNewButton=false
    refreshButton=true
    sorting=computedSorting
    orderable=true
    sortByColumn=(action "sortByColumn")
    addColumnToSorting=(action "addColumnToSorting")
    action="rowClick"
    pages=pages
    perPageValue=perPageValue
    perPageValues=perPageValues
    hasPreviousPage=hasPreviousPage
    hasNextPage=hasNextPage
    previousPage=(action "previousPage")
    gotoPage=(action "gotoPage")
    nextPage=(action "nextPage")
    customButtons = customButtons
    assertAction = 'assertAction'
    debugAction = 'debugAction'
    errorAction = 'errorAction'
    infoAction = 'infoAction'
    logAction = 'logAction'
    warnAction = 'warnAction'
    deprecationAction = 'deprecationAction'
    throwAction = 'throwAction'
  }}
</div>
<div class="application-log-modal-dialog ui small basic modal">
  <div class="content">
    <div class="application-log-modal-dialog-content center aligned ui grid">
      {{confirmModalDialogContent}}
    </div>
  </div>
  <div class="center aligned ui grid">
  <div class="actions">
  <div class="application-log-modal-dialog-cancel-button ui approve yellow inverted button" {{action 'closeDialog'}}>
      <i class="checkmark icon"></i>
      {{t "forms.application-log.cancel"}}
    </div>
    <div class="application-log-modal-dialog-ok-button ui approve green inverted button" {{action 'confirmed' confirmModalDialogCategory}}>
      <i class="checkmark icon"></i>
      {{t "forms.application-log.ok"}}
    </div>
  </div>
  </div>
</div>


