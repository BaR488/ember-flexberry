<h1 class="ui header">{{t "forms.error-form.caption"}}</h1>
<h2 class="ui header">
  {{#if (eq model.name "forms.error-form.error")}}
    {{#if model.name}}
      {{t model.name}}:
    {{/if}}
    {{#if model.message}}
      {{t model.message}}
    {{/if}}
  {{else}}
    {{if model.name (concat model.name ": ")}}
    {{if model.message model.message}}
  {{/if}}
</h2>
{{#if model.stack}}
  {{#flexberry-toggler
    caption=(t "forms.error-form.show-more")
  }}
    <pre>{{model.stack}}</pre>
  {{/flexberry-toggler}}
{{/if}}
{{#if model.retryRoute}}
  {{#if model.id}}
    {{link-to (t "forms.error-form.retry") model.retryRoute model.id
      tagName="button"
      activeClass=""
      class="ui button"
    }}
  {{else}}
    {{link-to (t "forms.error-form.retry") model.retryRoute
      tagName="button"
      activeClass=""
      class="ui button"
    }}
  {{/if}}
{{/if}}