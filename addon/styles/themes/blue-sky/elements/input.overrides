/*******************************
         Theme Overrides
*******************************/

.ui.action.input:not([class*="left action"]) > input {
    height: 35px;
}

.ui.action.input:not([class*="left action"]) > .button:last-child {
    border-radius: 0px;
}

input {
    border: none;
    border-bottom: 1px solid @borderColor;
    border-radius: 0px;
    outline: none;
}

.block-action-input input {
    height: 35px;
}

.flatpickr.flatpickr-input {
    letter-spacing: 3px;
}
